# Copy to .env and customize for your environment
# Strong secret required in production
JWT_SECRET=change-me-please-6b3a1e4c9d2f47a1a0b5c8d3e6f9a2b1
SERVER_DEBUG=false
# Image tag for server container (defaults to latest if unset)
SERVER_TAG=0.1.5

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=displaydeck
DB_USER=displaydeck_user
DB_PASSWORD=verysecretpassword

# MinIO / S3
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
SIGV4_DEBUG=false

# Public URL used in account emails (verify/reset links)
PUBLIC_WEB_URL=http://localhost:3000

# Require email verification before login (true|false)
AUTH_REQUIRE_EMAIL_VERIFICATION=false

# SMTP settings for transactional emails (if SMTP_HOST is blank, server logs emails instead)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@displaydeck.co.za
# SMTP_SECURE: none | starttls | ssl
SMTP_SECURE=starttls
